<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_intervallength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interval Length(Minutes)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtfld_intervallength"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interval Intensity(1-10):"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtfld_intensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_restlength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest Length(Minutes):"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/txtfld_restlength"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_interval_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done" />

    <TextView
        android:id="@+id/IntervalMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>